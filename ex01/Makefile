#--------------------------------------------------------------------Executable
NAME = ex01

#----------------------------------------------------------------------Compiler
CC = c++

#-------------------------------------------------------------------------Flags
CPPFLAGS = -Wall -Wextra -Werror

#----------------------------------------------------------------Libraries path

#-----------------------------------------------------------------------Headers
HEADERS = Bureaucrat.h Form.h
#---------------------------------------------------------------------Libraries

#------------------------------------------------------------------------Source
SRC = main.cpp Bureaucrat.cpp Form.cpp

#-----------------------------------------------------------------------Objects
OBJ = ${SRC:.cpp=.o}

#---------------------------------------------------------------------Directory
OBJ_DIR = obj/
OBJECT_PREFIXED = $(addprefix $(OBJ_DIR), $(OBJ))

#-------------------------------------------------------------------------Rules
all: $(NAME)

$(OBJ_DIR)%.o : %.cpp $(HEADERS)
	@mkdir -p $(dir $@)
	@$(CC) $(CPPFLAGS) -o $@ -c $<

$(NAME): $(OBJECT_PREFIXED)
	@$(CC) $(OBJECT_PREFIXED)  -o $(NAME)
	@echo "ex01 is ready!"

clean:
	@rm -rf $(OBJ_DIR)

fclean: clean
	@rm -f $(NAME)

re: fclean
	@$(MAKE) all

.PHONY: all, clean, fclean, re